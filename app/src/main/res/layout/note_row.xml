<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:backgroundTint="#F9F9F9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#7B1E58"
        app:layout_constraintBottom_toBottomOf="@+id/note_title_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/note_title_text_view" />

    <TextView
        android:id="@+id/note_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#000000"
        android:textSize="17sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="12sp"
        android:textColor="#4A4A4A"
        app:layout_constraintBottom_toBottomOf="@+id/note_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/note_title_text_view"/>

    <TextView
        android:id="@+id/note_body_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="San fran was one of the coolest places i have ever been all the beautiful sightseeing and â€¦"
        android:textSize="13sp"
        android:textColor="#4D5468"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/note_title_text_view"/>



</androidx.constraintlayout.widget.ConstraintLayout>